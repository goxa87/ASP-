@model MySite1.Auth.ViewModelRegistration
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>

<div class="central-container">
    <div class="identity-container">
        <form asp-action="Registration" asp-antiforgery="true" method="post">
            <div asp-validation-summary="ModelOnly" class="form-summary"></div>

            <label asp-for="Name" class="login-label"></label><br>
            <span asp-validation-for="Name"></span>
            <input class="form-input-text" type="text" asp-for="Name" /><br>

            <label asp-for="Email" class="login-label">Электронная почта:</label><br>
            <span asp-validation-for="Email"></span>
            <input class="form-input-text" type="email" asp-for="Email" /><br>

            <label asp-for="Password" class="login-label">Пароль:</label><br>
            <span asp-validation-for="Password"></span>
            <input class="form-input-text" type="password" asp-for="Password" /><br>

            <label asp-for="ConfirmPassword" class="login-label">Подтверждение пароля:</label><br>
            <span asp-validation-for="ConfirmPassword"></span>
            <input class="form-input-text" type="password" asp-for="ConfirmPassword" /><br>

            <label asp-for="Organization" class="login-label">Организация:</label><br>
            <span asp-validation-for="Organization"></span>
            <input class="form-input-text" type="text" asp-for="Organization" /><br><br>

            <input class="form-submit" type="submit" value="Зарегестрироваться" /><br>
        </form>     
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}